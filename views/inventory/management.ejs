<div class="management">

    <h1 class="title"><%- title %></h1>
    <%- messages() %>

    <% if (errors && errors.array().length > 0) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <ul class="inv_list">
        <li>
            <a class="btn-link" href="/inv/add-classification">Add New Classification</a>
        </li>
        <li>
            <a class="btn-link" href="/inv/add-inventory">Add New Vehicle</a>
        </li>
    </ul>
    <h2 class="manage_inventory">Manage Inventory</h2>
    <p class="selectClassification">Please select a classification from the list below:</p>
    <%- classifications %>
    <table id="inventoryDisplay"></table>
    <noscript>Javascript must be enabled to use this page</noscript>
    <script src="../../js/inventory.js"></script>
</div>
 