<h1><%- title %></h1>
<%- messages() %> <%# WK4 TSK2.4 %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<div class="display">
  <form class="input-box" action="/inv/add-inventory" method="post">
    <label>Classification
      <%- classifications %><span class="fine-print" required>
  </label>
    <label>Make<input type="text" value="<%- locals.inv_make %>" placeholder="Ford" name="inv_make" minlength="2" maxlength="50"><span class="fine-print" required></span></label>
    <label>Model<input type="text" value="<%- locals.inv_model %>" placeholder="Mustang" name="inv_model" minlength="2" maxlength="50"><span class="fine-print" required></span></label>
    <label>Year<input type="number" value="<%- locals.inv_year %>" placeholder="2001" name="inv_year" min="1900" max="2030"><span class="fine-print" required></span></label>
    <label for="inv_description">Description</label>
    <textarea class="description" id="inv_description" placeholder="Fancy and red." name="inv_description" minlength="2" maxlength="100" rows="5"><%- locals.inv_description %></textarea>
    <span class="fine-print">100 characters max.</span>
    <label>Image<input type="text" value="/images/vehicles/no-image.png" placeholder="red_mustang.jpg" name="inv_image"><span class="fine-print" required></span></label>
    <label>Thumbnail<input type="text" value="/images/vehicles/no-image-tn.png" placeholder="litle_red_mustang.jpg" name="inv_thumbnail"><span class="fine-print" required></span></label>
    <label>Price<input type="number" value="<%- locals.inv_price %>" placeholder="15000" name="inv_price"><span class="fine-print" required>Numeric only, no comma.</span></label>
    <label>Miles<input type="number" value="<%- locals.inv_miles %>" placeholder="100000" name="inv_miles"><span class="fine-print" required>Numeric only, no comma.</span></label>
    <label>Color<input type="text" value="<%- locals.inv_color %>" placeholder="Red" name="inv_color"><span class="fine-print" required></span></label>
    
    <input type="submit" value="ADD" id="btn">
  </form>
</div>