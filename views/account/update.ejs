<div class="display">
    <% if (title) { %>
        <h1 class="title"><%= title %></h1>
    <% } else { res.redirect('/')} %>

    <%- messages() %>

    <form action="/account/update" method="post">
        <label for="fname">First Name</label>
        <input type="text" name="account_firstname" id="accountFirstname" required value="<%= accountFirstname %>"><br>

        <label for="lname">Last Name</label>
        <input type="text" name="account_lastname" id="accountLastname" required value="<%= accountLastname %>"><br>

        <label for="email">Email Address</label>
        <input type="email" name="account_email" id="accountEmail" required value="<%= accountEmail %>"><br>

        <button type="submit" id="btn">Update</button>
    </form>

    <h3><a href="/account/manage">Back to Account Management</a></h3>
</div>